{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":semanticCommits",
    ":dependencyDashboard"
  ],
  "kubernetes": {
    "managerFilePatterns": [
      "/kubernetes/.+\\.yaml$/"
    ]
  },
  "helm-values": {
    "managerFilePatterns": [
      "/kubernetes/.+\\.yaml$/"
    ]
  },
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/infrastructure/terraform/.*\\.tf$/"
      ],
      "matchStrings": [
        "image:\\s*(?<depName>[^:]+):(?<currentValue>[^\"\\s]+)"
      ],
      "datasourceTemplate": "docker"
    }
  ],
  "packageRules": [
    {
      "groupName": "linuxserver images",
      "schedule": [
        "before 6am on monday"
      ],
      "matchPackageNames": [
        "/linuxserver/*/",
        "/lscr.io/*/"
      ]
    },
    {
      "matchUpdateTypes": [
        "major"
      ],
      "labels": [
        "major-update"
      ],
      "automerge": false,
      "matchPackageNames": [
        "*"
      ]
    },
    {
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "automerge": false,
      "schedule": [
        "before 6am on monday"
      ],
      "matchPackageNames": [
        "*"
      ]
    }
  ],
  "vulnerabilityAlerts": {
    "enabled": true,
    "labels": [
      "security"
    ]
  },
  "prHourlyLimit": 5,
  "prConcurrentLimit": 10
}
