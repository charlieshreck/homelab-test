# This resource configures cert-manager to issue certificates from Let's Encrypt
# using the DNS-01 challenge with Cloudflare. It now correctly looks for the
# CLOUDFLARE_API_TOKEN key inside the secret managed by Infisical.
apiVersion: cert-manager.io/v1
kind: ClusterIssuer
metadata:
  name: letsencrypt-prod
spec:
  acme:
    server: https://acme-v02.api.letsencrypt.org/directory
    email: charlieshreck@gmail.com
    
    privateKeySecretRef:
      name: letsencrypt-prod-account-key
    
    solvers:
      - dns01:
          cloudflare:
            email: charlieshreck@gmail.com
            apiTokenSecretRef:
              name: cloudflare-api-token-secret
              key: CLOUDFLARE_API_TOKEN # This now matches the key in Infisical
        selector:
          dnsZones:
            - shreck.io